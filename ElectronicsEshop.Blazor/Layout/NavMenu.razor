@inject AuthenticationStateProvider AuthStateProvider
@inject IAuthService AuthService
@inject NavigationManager Nav
@inject MessageService MessageService

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span>
                Produkty
            </NavLink>
        </div>

        <AuthorizeView>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/register">
                        <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span>
                        Zaregistrovat se
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/login">
                        <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span>
                        Přihlásit se
                    </NavLink>
                </div>
            </NotAuthorized>

            <Authorized Context="auth">
                <div class="nav-item px-3">
                    <span class="nav-link disabled text-white">
                        @auth.User.FindFirst(ClaimTypes.Name)?.Value
                    </span>
                </div>

                <div class="nav-item px-3">
                    <button class="nav-link btn btn-link text-start p-0" @onclick="Logout">
                        <span class="bi bi-box-arrow-right" aria-hidden="true"></span>
                        Odhlásit se
                    </button>
                </div>

                @if(auth.User.IsInRole(nameof(UserRoles.Admin)))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/admin/products">
                            <span class="bi bi-box-seam" aria-hidden="true"></span>
                            Správa produktů
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/admin/categories">
                            <span class="bi bi-box-seam" aria-hidden="true"></span>
                            Správa kategorií
                        </NavLink>
                        <NavLink class="nav-link" href="/admin/users">
                            <span class="bi bi-box-seam" aria-hidden="true"></span>
                            Správa Uživatelů
                        </NavLink>
                    </div>
                }
            </Authorized>
        </AuthorizeView>

    </nav>
</div>


@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private async Task Logout()
    {
        try
        {
            await AuthService.LogoutAsync();
            MessageService.ShowSuccess("Odhlášení proběhlo úspěšně.");
            Nav.NavigateTo("/");
        }
        catch (Exception ex)
        {
            MessageService.ShowError(ex.Message);
        }
    }
}
