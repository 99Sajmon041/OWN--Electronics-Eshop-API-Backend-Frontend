@page "/reset-password"
@using ElectronicsEshop.Blazor.Models.Auth.ResetPassword
@using ElectronicsEshop.Blazor.Services.Auth
@inject IAuthService AuthService
@inject NavigationManager Nav
@inject MessageService MessageService
@inject AuthenticationStateProvider AuthStateProvider


<h3>Obnovení hesla</h3>

@if (string.IsNullOrEmpty(model.UserId) || string.IsNullOrEmpty(model.Token))
{
    <div class="alert alert-danger">
        Odkaz pro obnovení hesla je neplatný nebo vypršel.
    </div>
}
else
{
    <EditForm Model="@model" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Nové heslo</label>
            <InputText class="form-control" type="password" @bind-Value="model.NewPassword" />
        </div>

        <div class="mb-3">
            <label class="form-label">Potvrzení hesla</label>
            <InputText class="form-control" type="password" @bind-Value="model.ConfirmPassword" />
        </div>

        <button class="btn btn-primary" type="submit">Změnit heslo</button>
    </EditForm>
}

@code {
    private ResetPasswordModel model = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        if(authState.User.Identity?.IsAuthenticated is true)
        {
            MessageService.ShowInfo("Jste již přihlášen, změna hesla přes odkaz není dostupná.");
            Nav.NavigateTo("/");
            return;
        }

        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        var query = QueryHelpers.ParseQuery(uri.Query);

        if(query.TryGetValue("userId", out var userId))
        {
            model.UserId = userId!;
        }

        if(query.TryGetValue("token", out var token))
        {
            model.Token = token!;
        }

        if(string.IsNullOrWhiteSpace(model.UserId) || string.IsNullOrWhiteSpace(model.Token))
        {
            MessageService.ShowError("Odkaz pro reset hesla je neplatný nebo vypršel.");
        }
    }

    private async Task HandleValidSubmit()
    {
        if(model.NewPassword != model.ConfirmPassword)
        {
            MessageService.ShowError("Hesla se neshodují.");
            return;
        }

        var result = await AuthService.ResetPasswordAsync(model);

        if(result.Success)
        {
            MessageService.ShowSuccess("Heslo bylo úspěšně změněno. Nyní se můžete přihlásit.");
            Nav.NavigateTo("/login");
        }
        else
        {
            MessageService.ShowError(result.ErrorMessage ?? "Změna hesla se nezdařila.");
        }
    }
}
