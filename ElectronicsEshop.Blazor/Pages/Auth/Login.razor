@page "/login"

@inject MessageService MessageService
@inject IAuthService AuthService
@inject UiState UiState
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Přihlášení</PageTitle>

<h3>Přihlášení</h3>

<EditForm Model="@model" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText class="form-control" @bind-Value="model.Email" disabled="@isBusy" />
    </div>

    <div class="mb-3">
        <label class="form-label">Heslo</label>
        <InputText class="form-control" type="password" @bind-Value="model.Password" disabled="@isBusy" />
    </div>

    <div class="form-check mb-3">
        <InputCheckbox class="form-check-input" @bind-Value="model.RememberMe" disabled="@isBusy" />
        <label class="form-check-label">Zapamatovat si mě</label>
    </div>

    <div class="form-label">
        <a class="nav-link p-0 d-inline text-decoration-underline"
           style="text-underline-offset: 3px;"
           href="/forgot-password">
            Zapomenuté heslo
        </a>
    </div>

    <button class="btn btn-primary" type="submit" disabled="@isBusy">
        @if (isBusy)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
            <span>Přihlašuji…</span>
        }
        else
        {
            <span>Přihlásit</span>
        }
    </button>
</EditForm>

@code {
    private LoginModel model = new();
    private bool isBusy;

    [SupplyParameterFromQuery(Name = "returnUrl")]
    [Parameter] public string? ReturnUrl { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();

        if (authState.User.Identity?.IsAuthenticated is true)
        {
            var target = GetSafeReturnUrl();
            MessageService.ShowInfo("Jste již přihlášen. Přesměrováno na požadovanou stránku.");
            Nav.NavigateTo(target);
        }
    }

    private async Task HandleValidSubmit()
    {
        if (isBusy)
            return;

        isBusy = true;
        UiState.StartBusy("Přihlašuji…");


        try
        {
            var result = await AuthService.LoginAsync(model);

            if (result.Success)
            {
                MessageService.ShowSuccess("Úspěšně přihlášen.");

                var target = GetSafeReturnUrl();
                Nav.NavigateTo(target);
            }
            else
            {
                MessageService.ShowError(result.ErrorMessage ?? "Přihlášení se nezdařilo.");
            }
        }
        finally
        {
            UiState.StopBusy();
            isBusy = false;
        }
    }

    private string GetSafeReturnUrl()
    {
        if (string.IsNullOrWhiteSpace(ReturnUrl))
            return "/";

        var decoded = Uri.UnescapeDataString(ReturnUrl);

        if (!decoded.StartsWith("/"))
            return "/";

        return decoded;
    }
}
