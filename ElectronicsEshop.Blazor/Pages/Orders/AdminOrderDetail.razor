@page "/admin/orders/{Id:int}"
@attribute [Authorize(Roles = nameof(UserRoles.Admin))]

@inject NavigationManager Nav
@inject IOrderAdminService OrderService
@inject MessageService MessageService
@inject HttpClient Http

@if (isLoading)
{
    <div class="d-flex justify-content-center align-items-center my-5">
        <div class="spinner-border me-2" role="status" aria-hidden="true"></div>
        <span>Načítám detail objednávky...</span>
    </div>
}
else
{
    <div class="mb-3" style="max-width: 700px; margin: 0 auto; text-align: center;">
        <h3 class="mb-1">Detail objednávky #@model.Id</h3>
        <span class="badge rounded-pill @OrderStatusHelper.GetStatusBadgeClass(model.OrderStatus)">
            @OrderStatusHelper.GetCzechOrderStatusName(model.OrderStatus)
        </span>
    </div>

    <div class="mb-3 text-center" style="max-width: 700px; margin: 0 auto;">
        <h4 class="mb-0">Zákazník: @model.CustomerFullName</h4>
        <small class="text-muted">@model.CustomerEmail</small>
    </div>

    <div class="card shadow-sm border-0" style="max-width: 700px; margin: 0 auto;">
        <div class="card-header d-flex justify-content-between align-items-center">
            <button class="btn btn-secondary btn-sm" @onclick="BackToList">
                Zpět na seznam všech objednávek
            </button>
        </div>

        <div class="card-body">
            <div class="row detail-row py-2">
                <div class="col-5 fw-bold">Celková částka</div>
                <div class="col-7 text-end">@model.TotalAmount.ToString("N2") Kč</div>
            </div>

            <div class="row detail-row py-2">
                <div class="col-5 fw-bold">Vytvořena</div>
                <div class="col-7 text-end">@model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</div>
            </div>

            <div class="row detail-row py-2">
                <div class="col-5 fw-bold">Stav objednávky</div>
                <div class="col-7">
                    @OrderStatusHelper.GetCzechOrderStatusName(model.OrderStatus)
                </div>
            </div>

            <div class="row detail-row py-2">
                <div class="col-5 fw-bold">Počet položek celkem</div>
                <div class="col-7 text-end">@model.ItemsCount</div>
            </div>

            @if (model.CanceledAt is not null)
            {
                <div class="row detail-row py-2">
                    <div class="col-5 fw-bold">Zrušeno</div>
                    <div class="col-7 text-end">
                        <span class="badge bg-warning text-dark">
                            @model.CanceledAt.Value.ToString("dd.MM.yyyy HH:mm")
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>

    @if (!model.OrderItems.Any())
    {
        <div class="alert alert-warning mt-3" style="max-width: 700px; margin: 0 auto;">
            Objednávka neobsahuje žádné položky.
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0 mt-3" style="max-width: 700px; margin: 0 auto;">
            <div class="card-header">
                Položky objednávky (@model.ItemsCount)
            </div>
            <div class="card-body p-0">
                <table class="table table-sm table-striped mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Produkt</th>
                            <th>Obrázek</th>
                            <th class="text-center">Množství</th>
                            <th class="text-end">Cena / ks</th>
                            <th class="text-end">Celková cena</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in model.OrderItems)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.ProductName</td>
                                <td>
                                    <img src="@Http.GetImageUrl(item.ImageUrl)"
                                         class="img-fluid rounded"
                                         alt="@item.ProductName"
                                         style="max-height: 64px; object-fit: contain;" />
                                </td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">@item.UnitPrice.ToString("N2") Kč</td>
                                <td class="text-end">@item.TotalPrice.ToString("N2") Kč</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}

@code {
    [Parameter]
    public int Id { get; set; }

    OrderAdminModel model = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrderAsync();
    }

    private async Task LoadOrderAsync()
    {
        try
        {
            isLoading = true;
            model = await OrderService.GetAsync(Id);
        }
        catch (Exception ex)
        {
            MessageService.ShowError(ex.Message);
            BackToList();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void BackToList()
    {
        Nav.NavigateTo("/admin/orders");
    }
}
