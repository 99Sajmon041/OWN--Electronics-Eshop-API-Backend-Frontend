@page "/orders/{Id:int}"
@attribute [Authorize]

@inject MessageService MessageService
@inject IOrderService OrderService
@inject NavigationManager Nav
@inject HttpClient Http

<PageTitle>Detail objednávky</PageTitle>

@if (isLoading)
{
    <div class="d-flex align-items-center gap-2 mb-3">
        <h3 class="mb-0">Detail objednávky</h3>
        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
        <span class="text-muted small">Načítám objednávku...</span>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h3 class="mb-1">
                Objednávka #@model.Id
            </h3>
            <div class="small text-muted">
                Vytvořeno: @model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                @if (model.CanceledAt is not null)
                {
                    <span class="ms-2">
                        | Zrušeno: @model.CanceledAt.Value.ToString("dd.MM.yyyy HH:mm")
                    </span>
                }
            </div>

            <div class="mt-2">
                <span class="badge rounded-pill @OrderStatusHelper.GetStatusBadgeClass(model.OrderStatus)">
                    @OrderStatusHelper.GetCzechOrderStatusName(model.OrderStatus)
                </span>

                <span class="badge bg-light text-muted border ms-1">
                    Položek: @model.ItemsCount
                </span>
            </div>
        </div>

        <div class="text-end">
            <div class="text-muted small mb-1">Celková částka</div>
            <div class="fw-bold fs-4">
                @model.TotalAmount.ToString("N2") Kč
            </div>

            <button class="btn btn-secondary btn-sm mt-2" @onclick="BackToList">
                Zpět na seznam objednávek
            </button>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-3">
        <div class="card-body">
            <h5 class="card-title mb-3">Souhrn objednávky</h5>

            <div class="row small text-muted">
                <div class="col-md-4 mb-2">
                    <div class="fw-semibold text-dark">Datum vytvoření</div>
                    @model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                </div>
                <div class="col-md-4 mb-2">
                    <div class="fw-semibold text-dark">Stav</div>
                    <span class="badge rounded-pill @OrderStatusHelper.GetStatusBadgeClass(model.OrderStatus)">
                        @OrderStatusHelper.GetCzechOrderStatusName(model.OrderStatus)
                    </span>
                </div>
                <div class="col-md-4 mb-2">
                    <div class="fw-semibold text-dark">Počet položek</div>
                    @model.ItemsCount
                </div>

                @if (model.CanceledAt is not null)
                {
                    <div class="col-md-4 mb-2">
                        <div class="fw-semibold text-dark">Zrušeno</div>
                        @model.CanceledAt.Value.ToString("dd.MM.yyyy HH:mm")
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="card-title mb-3">Položky objednávky</h5>

            @if (model.OrderItems is null || !model.OrderItems.Any())
            {
                <div class="alert alert-info mb-0">
                    Tato objednávka neobsahuje žádné položky.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Produkt</th>
                                <th class="text-end">Cena za kus</th>
                                <th class="text-end">Množství</th>
                                <th class="text-end">Mezisoučet</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in model.OrderItems)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrWhiteSpace(item.ImageUrl))
                                            {
                                                <img src="@Http.GetImageUrl(item.ImageUrl)"
                                                     alt="@item.ProductName"
                                                     class="img-thumbnail me-2"
                                                     style="width: 60px; height: 60px; object-fit: contain;" />
                                            }
                                            <div>
                                                <div class="fw-semibold">@item.ProductName</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-end">
                                        @item.UnitPrice.ToString("N2") Kč
                                    </td>
                                    <td class="text-end">
                                        @item.Quantity
                                    </td>
                                    <td class="text-end">
                                        @((item.Quantity * item.UnitPrice).ToString("N2")) Kč
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3" class="text-end">
                                    Celkem:
                                </th>
                                <th class="text-end">
                                    @model.TotalAmount.ToString("N2") Kč
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private OrderModel model = new();
    private bool isLoading;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrderAsync();
    }

    private async Task LoadOrderAsync()
    {
        try
        {
            isLoading = true;
            model = await OrderService.GetByIdAsync(Id);
        }
        catch (Exception ex)
        {
            MessageService.ShowError(ex.Message);
            BackToList();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void BackToList()
    {
        Nav.NavigateTo("/orders");
    }
}
