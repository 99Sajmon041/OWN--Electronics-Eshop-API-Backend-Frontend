@page "/admin/categories/{Id:int}"
@attribute [Authorize(Roles = nameof(UserRoles.Admin))]

@inject NavigationManager Nav
@inject ICategoryService CategoryService
@inject MessageService MessageService

<h3>Detail kategorie @model.Name</h3>

@if(isLoading)
{
    <div class="alert alert-info">
         Načítám kategorii...
    </div>
}
else if(model is null)
{
    <div class="alert alert-danger">
        Kategorie nebyla nalezena.
    </div>

    <button class="btn btn-secondary" @onclick="BackToList">
        Zpět na seznam
    </button>
}
else
{
    <div style="max-width: 600px; margin: 0 auto;" class="mb-3 text-center">
        <h3 class="mb-0">Detail kategorie @model.Name</h3>
    </div>

    <div class="card shadow-sm border-0" style="max-width: 600px; margin: 0 auto;">
        <div class="card-body p-0">

            <div class="row detail-row py-2 px-3">
                <div class="col-5 fw-bold">ID</div>
                <div class="col-7">@model.Id</div>
            </div>

            <div class="row detail-row py-2 px-3">
                <div class="col-5 fw-bold">Název kategorie</div>
                <div class="col-7">@model.Name</div>
            </div>

        </div>

        <div class="card-footer d-flex justify-content-between align-items-center">
            <button class="btn btn-secondary btn-sm" @onclick="BackToList">
                Zpět na seznam
            </button>
            <button class="btn btn-primary btn-sm" @onclick="OnEdit">
                Upravit kategorii
            </button>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private CategoryModel model = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadCategoryAsync();
    }

    private async Task LoadCategoryAsync()
    {
        try
        {
            isLoading = true;
            model = await CategoryService.GetByIdAsync(Id);
        }
        catch(Exception ex)
        {
            MessageService.ShowError(ex.Message);
            BackToList();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void BackToList()
    {
        Nav.NavigateTo("/admin/categories");
    }

    private void OnEdit()
    {
        Nav.NavigateTo($"/admin/categories/{Id}/edit");
    }
}
