@page "/products/detail/{Id:int}"

@inject HttpClient Http
@inject IProductService ProductService
@inject ICartsService CartsService
@inject MessageService MessageService
@inject NavigationManager Nav

<PageTitle>Detail produktu</PageTitle>

@if(isLoading)
{
    <p>Načítám...</p>
}
else
{
    <div class="container mt-4">

        <h3 class="mb-4">Detail produktu @model.Name</h3>

        <div class="card shadow-sm">
            <div class="row g-0">

                <div class="col-md-5 d-flex align-items-center justify-content-center p-3">
                    @if (!string.IsNullOrWhiteSpace(model.ImageUrl))
                    {
                        <img src="@Http.GetImageUrl(model.ImageUrl)"
                             class="img-fluid rounded"
                             alt="@model.Name"
                             style="max-height: 350px; object-fit: contain;" />
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center bg-light rounded"
                             style="width: 100%; height: 350px;">
                            <span class="text-muted">Bez obrázku</span>
                        </div>
                    }
                </div>

                <div class="col-md-7 p-4 ps-4">
                    <h2 class="fw-bold mb-3">@model.Name</h2>

                    <p class="text-muted mb-1">
                        Kategorie: <strong>@model.CategoryName</strong>
                    </p>

                    @if (!string.IsNullOrWhiteSpace(model.Description))
                    {
                        <p class="mb-3">
                            @model.Description
                        </p>
                    }

                    @if (model.DiscountPercentage > 0)
                    {
                        <h4 class="text-danger fw-bold mb-1">
                            @model.FinalPrice.ToString("C")
                            <span class="badge bg-danger ms-2">
                                -@model.DiscountPercentage %
                            </span>
                        </h4>

                        <p class="text-muted text-decoration-line-through mb-2">
                            Původní cena: @model.Price.ToString("C")
                        </p>
                    }
                    else
                    {
                        <h4 class="fw-bold mb-2">
                            @model.Price.ToString("C")
                        </h4>
                    }

                    <p class="mt-2 mb-4">
                        Dostupnost:
                        @if (model.StockQty > 0)
                        {
                            <span class="text-success fw-bold">
                                Skladem (@model.StockQty ks)
                            </span>
                        }
                        else
                        {
                            <span class="text-danger fw-bold">
                                Není skladem
                            </span>
                        }
                    </p>

                    <div class="mt-2 d-flex gap-2">
                        <AddToCartPicker Max="@model.StockQty"
                                         Disabled="@isLoading"
                                         CssClass="mt-3"
                                         OnAdd="(qty) => AddToCartAsync(model.Id, model.Name, qty)" />

                        <button class="btn btn-secondary"
                                @onclick="BackToList">
                            Zpět na produkty
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
}


@code {
    [Parameter]
    public int Id { get; set; }

    ProductModel model = new();

    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadProductAsync();
    }

    private async Task LoadProductAsync()
    {
        try
        {
            isLoading = true;
            model = await ProductService.GetByIdAsync(Id);
        }
        catch (Exception ex)
        {
            MessageService.ShowError(ex.Message);
            BackToList();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task AddToCartAsync(int productId, string productName, int quantity)
    {
        var model = new ChangeQtyCartModel
        {
            ProductId = productId,
            Quantity = quantity
        };

        try
        {
            await CartsService.AddItemAsync(model, productName);

            await LoadProductAsync();
            MessageService.ShowSuccess($"Zboží {productName} bylo x{quantity} přidáno do košíku.");
        }
        catch (Exception ex)
        {
            MessageService.ShowError(ex.Message);
        }
    }

    private void BackToList()
    {
        Nav.NavigateTo("/");
    }
}
